<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/speler"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="52dp"
        android:text="speler"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number"
        android:layout_width="27dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:text="12"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/speler"
        app:layout_constraintStart_toEndOf="@+id/minusbutton" />


    <Button
        android:id="@+id/plusbutton"
        android:layout_width="13dp"
        android:layout_height="18dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/plus"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintStart_toEndOf="@+id/number" />

    <Button
        android:id="@+id/minusbutton"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/min"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintStart_toEndOf="@+id/speler" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="28dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/minusbutton"
        app:layout_constraintEnd_toStartOf="@+id/number"
        app:srcCompat="@drawable/goal" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/minusAssists"
        app:layout_constraintEnd_toStartOf="@+id/minusAssists"
        app:srcCompat="@drawable/helpinghand" />

    <Button
        android:id="@+id/minus"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:alpha="0"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintEnd_toStartOf="@+id/number" />

    <Button
        android:id="@+id/plus"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintStart_toEndOf="@+id/number" />

    <TextView
        android:id="@+id/numberAssist"
        android:layout_width="27dp"
        android:layout_height="34dp"
        android:text="13"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/minus"
        app:layout_constraintTop_toBottomOf="@+id/speler" />

    <ImageButton
        android:id="@+id/minusAssists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/numberAssist"
        app:layout_constraintEnd_toStartOf="@+id/numberAssist"
        app:srcCompat="@drawable/min"
        />

    <ImageButton
        android:id="@+id/plusAssists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/numberAssist"
        app:layout_constraintStart_toEndOf="@+id/numberAssist"
        app:srcCompat="@drawable/plus" />


</android.support.constraint.ConstraintLayout>