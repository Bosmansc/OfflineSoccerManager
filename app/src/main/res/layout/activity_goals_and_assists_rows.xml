<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10FFFFFF"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#10FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#10FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/tv_plaats"
            app:layout_constraintTop_toTopOf="@+id/tv_plaats"
            tools:layout_editor_absoluteX="5dp">

            <TextView
                android:id="@+id/tv_speler"
                android:layout_width="137dp"
                android:layout_height="67dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Speler"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.789" />

            <TextView
                android:id="@+id/tv_goals"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="Goals"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_assists"
                app:layout_constraintTop_toTopOf="@+id/tv_speler" />

            <TextView
                android:id="@+id/tv_assists"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_goals" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>