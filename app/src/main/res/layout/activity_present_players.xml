<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundvoetbalveld">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="Misschien Aanwezig:"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/lv_playersPresent"
        app:layout_constraintTop_toBottomOf="@+id/lv_playersNotPresent" />

    <ListView
        android:id="@+id/lv_playersPresent"
        android:layout_width="371dp"
        android:layout_height="172dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="Niet Aanwezig:"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/lv_playersPresent"
        app:layout_constraintTop_toBottomOf="@+id/lv_playersPresent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="Aanwezig:"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/lv_playersPresent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <ListView
        android:id="@+id/lv_playersNotPresent"
        android:layout_width="368dp"
        android:layout_height="85dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ListView
        android:id="@+id/lv_playersMaybe"
        android:layout_width="377dp"
        android:layout_height="103dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="239dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/borderpresent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>